<body>

  <div class="container">
    <h2>Como você está se sentindo hoje?</h2>
    <textarea id="sentimento" placeholder="Digite aqui..."></textarea>
    <button onclick="gerarResposta()">Enviar</button>
    <div class="resposta" id="resposta"></div>
  </div>

  <script>
    function gerarResposta() {
      let texto = document.getElementById("sentimento").value.toLowerCase();
      let resposta = "";

      if (texto.includes("triste")) {
        resposta = "Sinto muito que você esteja se sentindo assim. Dias difíceis passam, você é mais forte do que imagina.";
      } 
      else if (texto.includes("ansioso")) {
        resposta = "Respire fundo. A ansiedade é só um momento, não é quem você é.";
      } 
      else if (texto.includes("feliz")) {
        resposta = "Que coisa maravilhosa! Aproveite esse momento e espalhe essa energia.";
      } 
      else {
        resposta = "Obrigado por compartilhar seus sentimentos. Lembre-se que você não está sozinho.";
      }

      document.getElementById("resposta").innerText = resposta;
    }
  </script>

</body>
</html>
